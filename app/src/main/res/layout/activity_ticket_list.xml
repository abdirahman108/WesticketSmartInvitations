<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketListActivity">

    <RelativeLayout
        android:id="@+id/title0"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >

        <ImageView
            android:id="@+id/Sawiricon"
            android:src="@drawable/guest"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </ImageView>

        <TextView
            android:id="@+id/number_of_guests"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/Sawiricon"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="38dp"
            android:fontFamily="@font/gravitas_one"
            android:text="Number of guests"
            android:textAlignment="center"
            android:textSize="40dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/title2"
        android:layout_below="@+id/title0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Name_of_Tickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nova_cut"
            android:text="Ticket Information"
            android:textAlignment="center"
            android:textSize="40dp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true">
    <ListView
        android:id="@+id/ticketList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true" />

    </RelativeLayout>


</RelativeLayout>